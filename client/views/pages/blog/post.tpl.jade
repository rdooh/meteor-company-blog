.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-12
    h2 #{blogOwner.username}'s Blog
    ol.breadcrumb
      li
        | Company, Inc. Blog
      li.active
        strong #{blogOwner.username}
      li.active
        strong #{post.title}

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .text-center.m-t-lg
        h1
          | #{post.title}
        h3 By 
          a(href="/{{blogOwner.username}}") #{blogOwner.username}
        small
          | #{post.description}
        hr    


  .row
    .col-lg-10.col-lg-offset-1
      .ibox
        .ibox-content
          .pull-right
            button.btn.btn-white.btn-xs(type='button') Model
            button.btn.btn-white.btn-xs(type='button') Publishing
            button.btn.btn-white.btn-xs(type='button') Modern
          .text-center.article-title
            span.text-muted
              i.fa.fa-clock-o
                if post.updatedAt
                  | Last Updated: #{post.updatedAt}
                else
                  | Created On #{post.createdAt}
                  
              .editing-tools
                if ownPost
                  button#edit-post.btn.btn-primary.pull-right(type='button')
                    i.fa.fa-file
