.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-12
    h2 #{username}'s Blog
    ol.breadcrumb
      li
        | Company, Inc. Blog
      li.active
        strong #{username}

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .text-center.m-t-lg
        h1
          | Create Post
        h3 By 
          a(href='/{{username}}') #{username}
        small
          | Fill out the form and create a new post
        hr    

  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          h5
            | Fill out all fields
        .ibox-content
          form.form-horizontal(method='get')
            .form-group
              label.col-sm-2.control-label Title
              .col-sm-10
                input.form-control(type='text', placeholder='Add a catchy title')#title
            .hr-line-dashed
            
            .form-group
              label.col-lg-2.control-label Slug
              .col-lg-10
                input.form-control(type='text', disabled='', placeholder='Preview of your post slug', value='#{postSlugPreview}')#slug
            .hr-line-dashed
              
            .form-group
              label.col-sm-2.control-label Description
              .col-sm-10
                input.form-control(type='text', placeholder='Add a short overview')#description
            .hr-line-dashed
              
                
            .form-group
              label.col-sm-2.control-label Content
              .col-sm-10
                textarea.form-control(type='text', placeholder='write your story')#content
            .hr-line-dashed
              
            .form-group
              .col-sm-4.col-sm-offset-2
                button.btn.btn-white(type='submit') Cancel
                button.btn.btn-primary(type='submit') Save changes
